---
import type { CollectionEntry } from 'astro:content'
import Post from './Post.astro'
interface Props {
	posts: CollectionEntry<'docs'>[]
}
const {posts} = Astro.props
---

<div class="grid lg:grid-cols-5 max-lg:grid-flow-row gap-8 place-content-center">
	<Fragment>
		{
			posts.map((p) => (
					<Post post={p} />
				))
		}
	</Fragment>
	
</div>